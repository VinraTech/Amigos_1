                            android:layout_gravity="center"
                            android:background="@color/tab_indicator_gray"
                            android:secondaryProgress="7"
                            android:progress="7" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/lock">

                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
