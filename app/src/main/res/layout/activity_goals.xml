                        </ImageView>



                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/layout_margin_20"
                        android:background="@color/tab_indicator_gray"
                        android:layout_height="1dp">

                    </View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="@dimen/layout_margin_20"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notonserif_bold"
                        android:layout_height="wrap_content"
                        android:text="Consistency through the week">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="@dimen/layout_margin_15"
                        android:layout_height="wrap_content"
                        android:text="27.0 Task more to complete the challenge and unlock the incentive">

                    </TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/layout_margin_15"
                        android:layout_height="@dimen/layout_margin_20" >

                        <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/layout_margin_20"
                            android:max="10"
                            android:thumb="@color/float_transparent"
                            android:progressDrawable="@layout/layout_progress_seekbar"
                            android:secondaryProgress="4"
                            android:progress="5" />

                        <TextView
                            android:text="21"
                            android:layout_centerInParent="true"
                            android:textColor="@color/gradient_start_color"
                            android:layout_width="wrap_content"
