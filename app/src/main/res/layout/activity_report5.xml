<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/liParent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/toolbarcolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuImage"
            android:layout_marginLeft="@dimen/layout_margin_15"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_keyboard_backspace_24">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/notonserif_bold"
            android:gravity="center"
            android:paddingRight="@dimen/layout_margin_30"
            android:text="@string/Servicing_Pickup"
            android:textColor="@color/white"
            android:textSize="@dimen/layout_margin_20">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/layout_margin_10"
        android:layout_marginTop="@dimen/layout_margin_10"
        android:layout_marginRight="@dimen/layout_margin_10"
        android:layout_marginBottom="@dimen/layout_margin_10"
        android:orientation="vertical">

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_margin="@dimen/layout_margin_5"
          android:elevation="@dimen/layout_margin_10"
          app:cardCornerRadius="@dimen/layout_margin_5">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_margin="@dimen/layout_margin_5"
              android:layout_height="match_parent"
              android:orientation="horizontal">

              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="0.7"
                  android:text="Maruti"
                  android:gravity="center"
                  android:layout_height="match_parent">

              </TextView>

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_weight="1.5"
                  android:background="@drawable/editetxtbackgroud"
                  android:gravity="center"
                  android:layout_marginTop="@dimen/layout_margin_5"
                  android:layout_marginBottom="@dimen/layout_margin_5"
                  android:orientation="horizontal"
                  android:layout_height="match_parent">

                  <ImageView
                      android:layout_width="0dp"
                      android:layout_gravity="center"
                      android:layout_height="match_parent"
                      android:src="@drawable/cameraimogo"
                      android:layout_weight="1.4">

                  </ImageView>
                  <View
                      android:layout_width="1dp"
                      android:background="@color/black"
                      android:layout_height="match_parent"></View>
                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:text="AF"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:layout_weight="1">

                  </TextView>

              </LinearLayout>

              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="Maruti Swift"
                  android:gravity="center"
                  android:layout_height="match_parent">

              </TextView>

          </LinearLayout>

      </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:layout_height="40dp"
            android:layout_margin="@dimen/layout_margin_5"
            android:elevation="@dimen/layout_margin_10"
            app:cardCornerRadius="@dimen/layout_margin_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/layout_margin_15"
                    android:layout_height="match_parent"
                    android:text="Slot :">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/layout_margin_15"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text="09:00 AM">

                </TextView>
                <View
                    android:layout_width="1dp"
                    android:layout_marginLeft="@dimen/layout_margin_15"
                   android:background="@color/black"
                    android:layout_marginBottom="@dimen/layout_margin_10"
                    android:layout_marginTop="@dimen/layout_margin_10"
                    android:layout_height="match_parent">

                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/layout_margin_15"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="ETA :">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/layout_margin_15"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:text="09:00 AM">

                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:layout_height="300dp"
            android:layout_margin="@dimen/layout_margin_5"
            android:elevation="@dimen/layout_margin_10"
            app:cardCornerRadius="@dimen/layout_margin_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/layout_margin_10"
                android:layout_marginBottom="@dimen/layout_margin_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/checkedsecond">

                        </ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black">

                        </View>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/dryclean">

                        </ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/black">

                        </View>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/circlefiest">

                        </ImageView>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Current Location"
                            android:fontFamily="@font/notonserif_bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/layout_margin_15"
                            android:layout_marginTop="@dimen/layout_margin_5">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mr. Lalit"
                            android:fontFamily="@font/notoserif_regular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/layout_margin_15">

                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Customer"
                            android:fontFamily="@font/notoserif_regular"
                            android:textColor="@color/colorPrimaryDark">

                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="414/13 Noida sector 62, Fal Mandi Uttar Pradesh"
                            android:textColor="@color/grey">

                        </TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="bottom"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Anand Motor, Maruti-Sadar Bazar Lucknow SVC"
                            android:fontFamily="@font/notoserif_regular"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/layout_margin_5">

                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Service Center"
                            android:fontFamily="@font/notoserif_regular"
                            android:textColor="@color/colorPrimaryDark">

                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="c-47, NEHARU ROAD"
                            android:textColor="@color/grey">
                        </TextView>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/layout_margin_5"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_call_24">

                        </ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/layout_margin_5"
                            android:src="@drawable/ic_baseline_call_24">

                        </ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:layout_height="40dp"
            android:layout_margin="@dimen/layout_margin_5"
            android:elevation="@dimen/layout_margin_10"
            app:cardCornerRadius="@dimen/layout_margin_5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/liNewPayout"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Ticket"
                    android:fontFamily="@font/notonserif_bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/layout_margin_20">

                </TextView>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:layout_height="match_parent">

                </ImageView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:layout_height="40dp"
            android:layout_margin="@dimen/layout_margin_5"
            android:elevation="@dimen/layout_margin_10"
            app:cardCornerRadius="@dimen/layout_margin_5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Ticket History"
                    android:fontFamily="@font/notonserif_bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/layout_margin_20">

                </TextView>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:layout_height="match_parent">

                </ImageView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/layout_margin_5"
            android:elevation="@dimen/layout_margin_10"
            app:cardCornerRadius="@dimen/layout_margin_5">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/liReachedtask"
                android:layout_height="match_parent"
                android:background="@color/toolbarcolor"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/layout_margin_5"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/notonserif_bold"
                    android:text="CLICK STOP TASK ONLY AFTER REACHING NEAR THE CUSTOMER'S VEHICLE"
                    android:textColor="@color/white"
                    android:textSize="@dimen/layout_margin_15">

                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>