<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#EDEDEF"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/liParent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/toolbarcolor"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/notonserif_bold"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/layout_margin_20">

        </TextView>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/layout_margin_20"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_10"
                android:layout_marginRight="@dimen/layout_margin_10"
                android:orientation="vertical"
                android:paddingLeft="@dimen/layout_margin_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notoserif_regular"
                    android:textColor="@color/grey"
                    android:gravity="center_vertical"
                    android:text="Select Brand:"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/layout_margin_10"
                    android:background="@drawable/expensebackground"
                >

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></Spinner>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_10"
                android:layout_marginLeft="@dimen/layout_margin_10"
                android:layout_marginRight="@dimen/layout_margin_10"
                android:orientation="vertical"
                android:paddingLeft="@dimen/layout_margin_10">

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/notoserif_regular"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:gravity="center_vertical"
                    android:text="Select Car:"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:layout_marginTop="@dimen/layout_margin_10"
                    android:background="@drawable/expensebackground"
                    >

                    <Spinner
                        android:id="@+id/spinnerCar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></Spinner>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_10"
                android:layout_marginLeft="@dimen/layout_margin_10"
                android:layout_marginRight="@dimen/layout_margin_10"
                android:orientation="vertical"
                android:paddingLeft="@dimen/layout_margin_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:fontFamily="@font/notoserif_regular"
                    android:gravity="center_vertical"
                    android:text="Variant:"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:layout_marginTop="@dimen/layout_margin_10"
                    android:background="@drawable/expensebackground"
                    >

                    <Spinner
                        android:id="@+id/spinnerVarient"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></Spinner>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_10"
                android:layout_marginLeft="@dimen/layout_margin_10"
                android:layout_marginRight="@dimen/layout_margin_10"
                android:orientation="vertical"
                android:paddingLeft="@dimen/layout_margin_10">

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/grey"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:fontFamily="@font/notoserif_regular"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Fuel Type:"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:layout_marginTop="@dimen/layout_margin_10"
                    android:background="@drawable/expensebackground"
                    >

                    <Spinner
                        android:id="@+id/spFuelType"
                        android:layout_width="match_parent"
                        android:entries="@array/Fuel"
                        android:layout_height="match_parent"></Spinner>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/layout_margin_10"
                android:layout_marginLeft="@dimen/layout_margin_10"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin_10"
                    android:layout_marginTop="@dimen/layout_margin_10"
                    android:fontFamily="@font/notoserif_regular"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:inputType="text"
                    android:textColor="@color/grey"
                    android:text="Car Plate Number" />

                <EditText
                    android:id="@+id/etCarPlateNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/expensebackground"
                    android:layout_marginLeft="@dimen/layout_margin_10"
                    android:layout_marginTop="@dimen/layout_margin_10"
                    android:fontFamily="@font/notoserif_regular"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:hint="UP - 16"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/layout_margin_15"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="@dimen/layout_margin_10"
                android:fontFamily="@font/notoserif_regular"
                android:background="@drawable/buttonbackground"
                android:gravity="center"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
