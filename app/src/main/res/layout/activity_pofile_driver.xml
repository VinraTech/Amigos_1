<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Views.EditProfileActivity">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/layout_margin_10"
        android:layout_marginTop="@dimen/layout_margin_10"
        android:layout_marginRight="@dimen/layout_margin_10"
        android:layout_marginBottom="@dimen/layout_margin_10"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_margin_10"
            android:layout_marginRight="@dimen/layout_margin_10"
            android:layout_marginBottom="@dimen/layout_margin_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/layout_margin_10"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_10">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgUser"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profilephoto"
                        android:textColor="@color/white"
                        android:textSize="15dp">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="-26dp"
                        android:layout_marginBottom="33dp"
                        android:layout_toRightOf="@id/imgUser"
                        android:src="@drawable/ic_baseline_photo_camera_24" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_marginBottom="@dimen/layout_margin_10"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Amigo"
                        android:textColor="@color/black"
                        android:textSize="15dp">

                    </TextView>

                    <RatingBar
                        android:id="@+id/ratingbar"
                        android:rating="3"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/layout_margin_20"
                        android:layout_weight="1"
                        android:outlineSpotShadowColor="@color/black"
                        android:numStars="5"
                        android:stepSize="0.5" />

                </LinearLayout>
            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/layout_margin_10"
                    android:layout_marginLeft="@dimen/layout_margin_10"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvDriverName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/layout_margin_10"
                        android:layout_marginTop="@dimen/layout_margin_10"
                        android:fontFamily="@font/notoserif_regular"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:inputType="text"
                        android:text="Name of the Amigo"
                        android:textColor="@color/grey" />

                    <TextView
                        android:id="@+id/tvDriverMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/layout_margin_10"
                        android:layout_marginTop="@dimen/layout_margin_10"
                        android:fontFamily="@font/notoserif_regular"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:inputType="text"
                        android:text="9879879874"
                        android:textColor="@color/grey" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvDL"
                            android:layout_width="0dp"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:fontFamily="@font/notoserif_regular"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:inputType="text"
                            android:text="DL123UP"
                            android:textColor="@color/grey" />

                        <TextView
                            android:id="@+id/tvDateOfBirth"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:fontFamily="@font/notoserif_regular"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:inputType="text"
                            android:text="00/00/0000"
                            android:textColor="@color/grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/notoserif_regular"

                            android:layout_marginTop="@dimen/layout_margin_15"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="@dimen/layout_margin_10"
                            android:background="@drawable/buttonbackground"
                            android:gravity="center"
                            android:text="View Declaraion"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="15sp">

                        </androidx.appcompat.widget.AppCompatButton>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/notoserif_regular"

                            android:layout_marginTop="@dimen/layout_margin_15"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="@dimen/layout_margin_10"
                            android:background="@drawable/buttonbackground"
                            android:gravity="center"
                            android:text="SHARE ID"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="15sp">

                        </androidx.appcompat.widget.AppCompatButton>

                    </LinearLayout>





                </LinearLayout>








            </LinearLayout>





        </LinearLayout>

    </LinearLayout>

</ScrollView>