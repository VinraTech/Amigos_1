<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:id="@+id/navdrawer"
    android:paddingLeft="@dimen/layout_margin_10"
    android:paddingTop="@dimen/layout_margin_10"
    android:paddingRight="@dimen/layout_margin_10"
    android:paddingBottom="@dimen/layout_margin_10">

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/imgProfileEdit"
        android:layout_gravity="right"
        android:layout_height="@dimen/layout_margin_20"
        android:src="@drawable/ic_baseline_create_24">

    </ImageView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:id="@+id/imgProfile"
        android:layout_height="50dp"
        android:src="@drawable/profilephoto">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tvDriverName"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="driver name">

    </TextView>

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:rating="3"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:outlineSpotShadowColor="@color/green"
        android:numStars="5"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/tvAppVersion"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="App version 1.0">

    </TextView>

    <TextView
        android:id="@+id/tvOffDuty"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="on/of Duty">

    </TextView>
</LinearLayout>
