<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDEF"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_10"
            android:layout_marginTop="10dp"
            android:gravity="start">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Please provide full information"
                android:textColor="@color/intro_title_color"
                android:fontFamily="@font/notonserif_bold">

            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/layout_margin_10"
            android:layout_marginTop="@dimen/layout_margin_20"
            android:fontFamily="@font/notonserif_bold"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Personal Details*"
            android:textColor="@color/intro_title_color">

        </TextView>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_margin_10"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:fontFamily="@font/notoserif_regular"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:inputType="text"
                            android:text="Enter Full Name"
                            android:textColor="@color/grey" />

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:fontFamily="@font/notoserif_regular"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:background="@drawable/expensebackground"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_margin_10"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:fontFamily="@font/notoserif_regular"

                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:inputType="text"
                            android:text="Enter Mobile"
                            android:textColor="@color/grey" />

                        <EditText
                            android:id="@+id/etMobile"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:maxLength="10"
                            android:fontFamily="@font/notoserif_regular"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:background="@drawable/expensebackground"
                            android:gravity="center_vertical"
                            android:inputType="phone"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_margin_10"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:fontFamily="@font/notoserif_regular"

                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:inputType="text"
                            android:text="Enter Email"
                            android:textColor="@color/grey" />

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:fontFamily="@font/notoserif_regular"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:background="@drawable/expensebackground"
                            android:gravity="center_vertical"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_margin_10"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:fontFamily="@font/notoserif_regular"

                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:inputType="text"
                            android:text="Enter Address"
                            android:textColor="@color/grey" />

                        <EditText
                            android:id="@+id/etAddress"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:fontFamily="@font/notoserif_regular"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:background="@drawable/expensebackground"
                            android:gravity="start"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </LinearLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/layout_margin_10"
                        android:layout_marginTop="@dimen/layout_margin_10"
                        android:fontFamily="@font/notonserif_bold"

                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Car Details*"
                        android:textColor="@color/intro_title_color">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_10"
                        android:layout_marginLeft="@dimen/layout_margin_10"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:inputType="text"
                            android:fontFamily="@font/notoserif_regular"

                            android:text="Model Number"
                            android:textColor="@color/grey" />

                        <EditText
                            android:id="@+id/etModelNumber"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:fontFamily="@font/notoserif_regular"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:background="@drawable/expensebackground"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_10"
                        android:layout_marginLeft="@dimen/layout_margin_10"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:fontFamily="@font/notoserif_regular"

                            android:inputType="text"
                            android:text="Car Number"
                            android:textColor="@color/grey" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/layout_margin_10"
                            android:fontFamily="@font/notoserif_regular"
                            android:id="@+id/etCarNumber"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:background="@drawable/expensebackground"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin_10"
                        android:layout_marginLeft="@dimen/layout_margin_10"
                        android:layout_marginRight="@dimen/layout_margin_10"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/layout_margin_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="@color/grey"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:fontFamily="@font/notoserif_regular"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Select Service"></TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginRight="@dimen/layout_margin_10"
                            android:layout_marginTop="@dimen/layout_margin_10"
                            android:background="@drawable/expensebackground"
                            >

                            <Spinner
                                android:id="@+id/spServiceType"
                                android:layout_width="match_parent"
                                android:entries="@array/servives"
                                android:layout_height="match_parent"></Spinner>


                        </LinearLayout>
                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="@dimen/layout_margin_15"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="@dimen/layout_margin_10"
                        android:background="@drawable/buttonbackground"
                        android:gravity="center"
                        android:fontFamily="@font/notoserif_regular"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp">

                    </androidx.appcompat.widget.AppCompatButton>


                </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </LinearLayout>

</ScrollView>
